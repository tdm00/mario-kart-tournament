<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Admin Dashboard</h1>

  <h2>Drivers</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age Range</th>
        <th>Skill Level</th>
        <th>Total Score</th>
      </tr>
    </thead>
    <tbody>
      <% drivers.forEach(driver => { %>
      <tr>
        <td><%= driver.name %></td>
        <td><%= driver.ageRange %></td>
        <td><%= driver.skillLevel %></td>
        <td><%= driver.totalScore %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/admin/addDriver">Add Driver</a>
  <a href="/admin/enterScore">Enter Scores</a>
  <a href="/admin/logout">Logout</a>
</body>
</html>