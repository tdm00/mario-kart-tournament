<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard</title>

  <!-- Auto-refresh every 5 seconds -->
  <meta http-equiv="refresh" content="30">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

  <!-- Custom CSS (Optional) -->
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    main {
      flex: 1;
    }
    footer {
      background-color: #343a40;
      color: white;
      text-align: center;
      padding: 10px 0;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Mario Kart Tournament</a>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mt-5">
    <h1 class="text-center mb-4">Leaderboard</h1>

    <!-- Links to Group Results -->
    <!-- <div class="text-center mb-4">
      <a href="/spectator?groupBy=skill" class="btn btn-primary">Group by Skill Level</a>
      <a href="/spectator?groupBy=age" class="btn btn-secondary">Group by Age Range</a>
      <a href="/spectator" class="btn btn-dark">Show All</a>
    </div> -->

    <!-- Drivers Table -->
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Skill Level</th>
          <th>Age Range</th>
          <th>Total Score</th>
        </tr>
      </thead>
      <tbody>
        <% if (drivers.length > 0) { %>
          <% drivers.forEach((driver, index) => { %>
            <tr>
              <td><%= index + 1 %></td> <!-- Rank -->
              <td><%= driver.name %></td>
              <td><%= driver.skill_level %></td>
              <td><%= driver.age_range %></td>
              <td><%= driver.total_score %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No drivers found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 Mario Kart Tournament</p>
  </footer>

  <!-- Bootstrap JavaScript -->
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>